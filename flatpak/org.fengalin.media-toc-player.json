{
  "app-id": "org.fengalin.media-toc-player",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "media-toc-player",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--env=GDK_BACKEND=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.FileManager1",
    "--filesystem=home:ro",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--env=LD_LIBRARY_PATH=/app/lib"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    {
      "name": "gst-plugins-ugly",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://anongit.freedesktop.org/git/gstreamer/gst-plugins-ugly",
          "tag": "1.12.4"
        }
      ]
    },
    {
      "name": "gst-libav",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://anongit.freedesktop.org/git/gstreamer/gst-libav",
          "tag": "1.12.4"
        }
      ]
    },
    {
      "name": "media-toc-player",
      "buildsystem": "simple",
      "build-options" : {
        "build-args": [
          "--share=network"
        ],
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
          "CARGO_HOME" : "/run/build/media-toc-player/cargo",
          "DEBUG" : "true",
          "V": "1"
        }
      },
      "build-commands": [
        "cargo build --release",
        "install -Dm755 target/release/media_toc_player /app/bin/media-toc-player"
      ],
      "sources": [
        {
          "type": "git",
          "path": "."
        }
      ]
    }
  ]
}
